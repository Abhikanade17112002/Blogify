<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="./styles/comment.css">
</head>
<body>



    <%-include("./Partials/navbar.ejs") %>
    
       <div class=" post-comment-container">
      
        <div class="post-image">
            <img src=<%=post.userPostImage%> alt="">
        </div>
        <div class="post-info-container">
            <div class="post-title">
              <h5><%=post.title%></h3>
            </div>
            <div class="post-content">
                <h5><%=post.content%></h3>
            </div>
        </div>
        <div class="post-stats-container">
            <div class="post-likes">
          
                likes <small><%=post.likes.length%></small>
            
            </div>
            <div class="post-comments">
                
                    comments <%= postComments.length %>
                
            </div>
        </div>
        <div class="post-comments-container">
            <div class="post-comments-heading">
                <h5>Comments <%= postComments.length  %></h5>
                
            </div>
           <div class="post-comments-sections">
           
           <% postComments.forEach(postComment => { %>
                <div class="post-comment">
                    <div class="post-comment-user">
                    @<%= postComment.createdBy.username  %>
                    </div>
                    <div class="post-comment-content">
                        <%= postComment.content  %>
                    </div>
                  </div>
                  <% }) %>
            
           </div>
        </div>
        
    <% if( locals.token){ %>
        <div class="post-comment-form">

            <form action="/user/comment:<%=post._id %>"  method="POST"  class="comment-form">
             <div class="form-input">
             
             <textarea name="postcomment" id="post-comment-input" class="post-comment-input" placeholder="Make A "></textarea>
             </div>
             <div class="form-button">
                 <button type="submit">Post Comment</button>
             </div>
             
            </form>
         </div>
      <% }%>  
      
     
        
       </div>


        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>